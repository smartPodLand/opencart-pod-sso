{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-pod_sso" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
                <h1>{{ heading_title }}</h1>
                <ul class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="container-fluid">      
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-pod_sso" class="form-horizontal">
                        <div class="tab-content">
                            <div id="tab-pod_sso" class="tab-pane active">
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_client_id|e }}">{{ entry_client_id }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_client_id" value="{{ module_pod_sso_client_id }}" placeholder="{{ entry_client_id }}" id="input-id" class="form-control" />
                                        {% if error_client_id %}
                                            <div class="text-danger">{{ error_client_id }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_client_secret|e }}">{{ entry_client_secret }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_client_secret" value="{{ module_pod_sso_client_secret }}" placeholder="{{ entry_client_secret }}" id="input-id" class="form-control" />
                                        {% if error_client_secret %}
                                            <div class="text-danger">{{ error_client_secret }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_sso_address|e }}">{{ entry_sso_address }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_address" value="{{ module_pod_sso_address }}" placeholder="{{ entry_sso_address }}" id="input-id" class="form-control" />
                                        {% if error_sso_address %}
                                            <div class="text-danger">{{ error_sso_address }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_platform_address|e }}">{{ entry_platform_address }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_platform_address" value="{{ module_pod_sso_platform_address }}" placeholder="{{ entry_platform_address }}" id="input-id" class="form-control" />
                                        {% if error_platform_address %}
                                            <div class="text-danger">{{ error_platform_address }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_api_token|e }}">{{ entry_api_token }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_api_token" value="{{ module_pod_sso_api_token }}" placeholder="{{ entry_api_token }}" id="input-id" class="form-control" />
                                        {% if error_api_token %}
                                            <div class="text-danger">{{ error_api_token }}</div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_private_address|e }}">{{ entry_private_address }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_private_address" value="{{ module_pod_sso_private_address }}" placeholder="{{ entry_private_address }}" id="input-id" class="form-control" />
                                        {% if error_private_address %}
                                            <div class="text-danger">{{ error_private_address }}</div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-id"><span data-toggle="tooltip" title="{{ help_guild_code|e }}">{{ entry_guild_code }}</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="module_pod_sso_guild_code" value="{{ module_pod_sso_guild_code }}" placeholder="{{ entry_guild_code }}" id="input-id" class="form-control" />
                                        {% if error_guild_code %}
                                            <div class="text-danger">{{ error_guild_code }}</div>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="input-module_pod_sso_status">{{ entry_status }}</label>
                                    <div class="col-sm-10">
                                        <select name="module_pod_sso_status" id="input-module_pod_sso_status" class="form-control">
                                            {% if module_pod_sso_status %}
                                            <option value="1" selected>{{ text_enabled }}</option>                  
                                            <option value="0">{{ text_disabled }}</option>                  
                                            {% else  %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected>{{ text_disabled }}</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{{ footer }}